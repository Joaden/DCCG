{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <h1>Inscription</h1>

        <h2>Visible par vous uniquement</h2>
        <div class="ml-5">
            <div class="row">
                <div class="col-md-6">
                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                </div>
            </div>
        </div>

        <h2>Visible par tout le monde</h2>
        <div class="ml-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_row(registrationForm.pseudo) }}
                        {{ form_row(registrationForm.phrase) }}
                        {{ form_row(registrationForm.avatar) }}
                    </div>
                </div>
            </div>
        </div>

        <hr>
        <div>Accepter les conditions générales d'utilisations</div>
        {{ form_row(registrationForm.agreeTerms) }}

        <div class="row">
            <div class="col text-center">
                <button type="submit" name="formregister" class="btn btn-primary">Je m'inscris</button>
            </div>
        </div>
        {{ form_end(registrationForm) }}




        <hr>
        <p class="text-center">Vous avez déjà un compte ?</p>
        <div class="row">
            <div class="col text-center">
                <a href="{{ path('app_login') }}" class="btn btn-danger text-white">
                    Se connecter
                </a>
            </div>
        </div>
    </div>

{% endblock %}
